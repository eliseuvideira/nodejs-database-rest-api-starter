{
  "name": "rest-api-postgres-starter",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Eliseu Videira <eliseuvideira1@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@ev-fns/auth": "^1.0.1",
    "@ev-fns/dotenv": "^1.0.1",
    "@ev-fns/endpoint": "^1.0.0",
    "@ev-fns/errors": "^0.1.1",
    "@ev-fns/openapi": "^0.3.2",
    "@ev-fns/server": "^0.2.1",
    "@ev-fns/spawn": "^0.1.2",
    "@ev-fns/validation": "^0.1.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "knex": "^0.95.6",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0"
  },
  "scripts": {
    "build": "tsc",
    "coverage": "jest --coverage && xdg-open ./coverage/lcov-report/index.html &>/dev/null",
    "dev": "ts-node-dev --no-notify src/server.ts",
    "docker-build": "./.docker-build",
    "docker-push": "./.docker-push",
    "format": "prettier --write 'src/**/*'",
    "lint": "eslint --max-warnings=0 'src/**/*'",
    "migrate-down": "knex --knexfile ./database/knexfile.js migrate:down",
    "migrate-latest": "knex --knexfile ./database/knexfile.js migrate:latest",
    "migrate-make": "knex --knexfile ./database/knexfile.js migrate:make",
    "migrate-rollback": "knex --knexfile ./database/knexfile.js migrate:rollback",
    "migrate-up": "knex --knexfile ./database/knexfile.js migrate:up",
    "prepare": "husky install",
    "start": "node build/server.js",
    "test": "jest",
    "watch": "jest --watch"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings=0",
      "prettier --check"
    ]
  }
}
